<record id="media" is-extension="true">
	<services-record-path id="botgarden">media_botgarden:http://collectionspace.org/services/media/local/botgarden,media_botgarden</services-record-path>
	
	<section id="mediaInformation">
		<!-- Remove mini values -->
		<field id="title" mini=""/>
		
		<!-- New fields -->
		<field id="handwritten" section="botgarden" ui-search="single">
			<options>
				<option id="">Please select a value</option>
				<option id="Unknown">Unknown</option>
				<option id="yes">Yes</option>
				<option id="no">No</option>
			</options>
		</field>

		<field id="postToPublic" section="botgarden" ui-search="single">
			<options>
				<option id="">Please select a value</option>
				<option id="no" default="yes">No</option>
				<option id="yes">Yes</option>
			</options>
		</field>

		<field id="scientificTaxonomy" in-title="yes" mini="summary,search,list,relate" section="botgarden" autocomplete="taxon-taxon" ui-search="repeatable">
			<title-selector>titleBar-media-scientificTaxonomy</title-selector>
		</field>

		<field id="imageNumber" section="botgarden" datatype="integer" ui-type="validated" mini="search,list,relate" ui-search="range"/>

		<field id="plantMorphology" section="botgarden" ui-type="enum" autocomplete="vocab-plantmorphology"/>
	</section>
</record>
