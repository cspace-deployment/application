<?xml version="1.0"?>
<record id="movement">
	<section id="locationMovementInformation">
		<!-- Remove location-offsite_sla from autocomplete -->
		<field id="currentLocation" autocomplete="location-location,organization-organization"/>
	</section>
	
	<section id="movementControlInformation">
        <!-- <field id="movementReferenceNumber" mini="search,list,relate,terms" ui-type="computed" ui-args="currentLocation" ui-func="pahma.computeReferenceNumber" ui-readonly="true"/> -->
	    
		<field id="reasonForMove" autocomplete="vocab-reasonformove" ui-type="enum">
			<!-- Converted to dynamic -->
		</field>
		<repeat id="movementMethods">
			<field id="movementMethod">
				<!-- Change options -->
				<options>
					<option id="" default="yes">(none selected)</option>
					<option id="rubbermaid">by cart (rubbermaid)</option>
					<option id="handcarried">by hand</option>
					<option id="bathtubcart">by "bathtub" cart</option>
					<option id="hydrauliclift">by hydraulic lift</option>
					<option id="palletjack">by pallet jack</option>
					<option id="forklift">by forklift</option>
					<option id="vantruck">by van/truck</option>
					<option id="crane">By crane</option>
					<option id="other">Other (specify in notes)</option>
				</options>
			</field>
		</repeat>
	</section>
</record>
