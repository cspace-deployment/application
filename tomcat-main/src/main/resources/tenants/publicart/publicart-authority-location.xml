<record id="location" is-extension="true">
    <services-record-path id="publicart">locations_publicart:http://collectionspace.org/services/location/local/publicart,locations_publicart</services-record-path>

    <section id="locationTermInformation">
        <!-- Local fields -->

        <field id="addressGroup" ui-type="groupfield/address/selfrenderer" section="publicart" />
    </section>

    <section id="geoRefInformation">
        <!-- Local fields -->

        <field id="decimalLatitude" datatype="float" section="publicart" />
        <field id="decimalLongitude" datatype="float" section="publicart" />
    </section>
</record>
