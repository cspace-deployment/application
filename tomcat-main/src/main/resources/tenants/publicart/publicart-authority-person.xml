<record id="person" is-extension="true">
    <services-record-path id="publicart">persons_publicart:http://collectionspace.org/services/person/local/publicart,persons_publicart</services-record-path>

    <section id="personNameAuthorityInformation">
        <!-- Local fields -->

        <repeat id="organizations" section="publicart">
            <field id="organization" autocomplete="true" section="publicart" />
        </repeat>

        <repeat id="socialMediaGroupList/socialMediaGroup" section="publicart">
            <field id="socialMediaHandle" section="publicart" />
            <field id="socialMediaHandleType" autocomplete="true" ui-type="enum" section="publicart" />
        </repeat>
    </section>
</record>
