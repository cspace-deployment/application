<record id="exhibition" is-extension="true">
    <services-record-path id="publicart">exhibitions_publicart:http://collectionspace.org/services/exhibition/local/publicart,exhibitions_publicart</services-record-path>

    <section id="exhibitionObjectInformation">
        <!-- Local fields -->

        <!-- Replacement for exhibitionObjectGroupList/exhibitionObjectGroup to add current location. -->
        <repeat id="publicartExhibitionObjectGroupList/publicartExhibitionObjectGroup" section="publicart">
            <field id="exhibitionObjectNumber" section="publicart" />
            <field id="exhibitionObjectName" section="publicart" />
            <field id="exhibitionObjectCurrentLocation" autocomplete="true" section="publicart" />
        </repeat>
    </section>
</record>